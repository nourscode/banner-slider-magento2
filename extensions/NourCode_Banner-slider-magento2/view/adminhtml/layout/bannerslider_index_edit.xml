<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <update handle="editor"/>
    <!-- <update handle="bannerslider_index_form"/> -->
    <head>
        <title>Bannerslider</title>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">NourCode_Bannerslider::bannerslider</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="page.main.actions">
            <block class="Magento\Backend\Block\Store\Switcher" name="store_switcher">
                <action method="setUseConfirm">
                    <argument name="params" xsi:type="string">1</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
        <block class="NourCode\Bannerslider\Block\Adminhtml\Bannerslider\Edit" name="bannerslider_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
        <block class="NourCode\Bannerslider\Block\Adminhtml\Bannerslider\Edit\Tabs" name="bannerslider_edit_tabs">
            <block class="NourCode\Bannerslider\Block\Adminhtml\Bannerslider\Edit\Tab\Form" name="bannerslider_edit_tab_form"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">main_section</argument>
                <argument name="block" xsi:type="string">bannerslider_edit_tab_form</argument>
            </action>
            <block class="NourCode\Bannerslider\Block\Adminhtml\Bannerslider\Edit\Tab\Images" name="bannerslider_edit_tab_images"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">media_gallery</argument>
                <!-- reqruie name is media_gallery -->
                <argument name="block" xsi:type="string">bannerslider_edit_tab_images</argument>
            </action>

            <block class="NourCode\Bannerslider\Block\Adminhtml\Bannerslider\Edit\Tab\Imagemobile" name="bannerslider_edit_tab_images_for_mobile"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">media_gallery_mobile</argument>
                <!-- reqruie name is media_gallery -->
                <argument name="block" xsi:type="string">bannerslider_edit_tab_images_for_mobile</argument>
            </action>

            <block class="NourCode\Bannerslider\Block\Adminhtml\Bannerslider\Edit\Tab\Responsive" name="bannerslider_edit_tab_responsive"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">responsive_section</argument>
                <argument name="block" xsi:type="string">bannerslider_edit_tab_responsive</argument>
            </action>
            <block class="NourCode\Bannerslider\Block\Adminhtml\Bannerslider\Edit\Tab\Config" name="bannerslider_edit_tab_config"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">config_section</argument>
                <argument name="block" xsi:type="string">bannerslider_edit_tab_config</argument>
            </action>
        </block>
        </referenceContainer>
    </body>
</page>
